<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>ECAT</title>
    <base href="/">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="icon" type="image/png" href="favicon.png" sizes="32x32">
    <meta name="theme-color" content="#000000">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div #usertoken id="usertoken" data-user-string="@ViewBag.User" data-error-string="@ViewBag.Error"></div>
    <ecat-app>
        <div style="padding: 20%;text-align:center;">
            <!--<img src="assets/icons/covalent.svg" width="200">-->
            <div>ECAT Loading...</div>
        </div>
    </ecat-app>
    <script>
        var usertoken = document.getElementById("usertoken").getAttribute("data-user-string");
        if (usertoken.length == 0) {
            var errortoken = document.getElementById("usertoken").getAttribute("data-error-string");
            localStorage.setItem("ecatError", errortoken);
        } else {
            var jsonToken = JSON.parse(usertoken);
            localStorage.setItem("ecatAccessToken", jsonToken.access_token);
            localStorage.setItem("ecatUserIdToken", jsonToken.id_token);
        }
        window.location = "index.html";

    </script>
</body>
</html>

